{
  "name": "react-ghostwriter",
  "version": "1.0.0",
  "main": "index.js",
  "author": "yiKyo <yikyo666@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.config.js --mode development --hot",
    "build": "webpack --config config/webpack.config.js --mode production"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "postcss-loader": "^2.1.6",
    "prettier": "^1.14.0",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.21.0",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5"
  }
}
